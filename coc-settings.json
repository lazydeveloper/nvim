{
  "languageserver": {
    "jdt.ls": {
      "command": "jdtls",
      "args": [
        "-Declipse.application=org.eclipse.jdt.ls.core.id1",
        "-Dosgi.bundles.defaultStartLevel=4",
        "-Declipse.product=org.eclipse.jdt.ls.core.product",
        "-Dlog.protocol=true",
        "-Dlog.level=ALL",
        "-Xms1g",
        "-Xmx2g",
        "-jar", "/opt/homebrew/Cellar/jdtls/1.37.0/libexec/plugins/org.eclipse.equinox.launcher_1.6.900.v20240613-2009.jar",
        "-configuration", "/opt/homebrew/Cellar/jdtls/1.37.0/libexec/config_mac",
        "-data", "~/java-workspace"
      ],
      "filetypes": ["java"], 
      "rootPatterns": [".project", "pom.xml", "build.gradle", ".git", "mvnw", "gradlew"]
    }
  },
  "suggest.autoTrigger": "always",
  "java.format.enabled": true
}

